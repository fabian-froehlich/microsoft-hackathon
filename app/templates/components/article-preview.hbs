<div id="menu">
	<div class="panel list-group">
		 <a href="{{modelInstance.article.link}}" style="text-decoration: none;">
		 	<div class="list-group-item">{{modelInstance.article.title}}
		 	<span style="float:right"class="glyphicon glyphicon-link"></span>
		 	</div>
		 </a>
		 <div class="list-group-item">
	 	 	<span onclick={{action 'toggleCollapse'}} style="cursor:pointer">
			 	{{#bs-collapse collapsed=collapsed style="position:relative"}}
			 	{{#if modelInstance.article.description}}
  					{{modelInstance.article.description}}
				{{else}}
 				 	{{modelInstance.article.summary}}
				{{/if}}
				<div class="collapse-gradient">
					<!-- gradient -->
				</div>
				{{/bs-collapse}}
			</span>
	
		 </div>
	</div>
</div>